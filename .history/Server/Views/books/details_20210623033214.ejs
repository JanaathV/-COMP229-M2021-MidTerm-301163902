    <!-- MAIN CONTENT -->

    <div class="row justify-content-lg-center g-3">
    <h1><%= title %> Book List</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="TitleTextFeild">Title</span>
            <input type="text" class="form-control" placeholder="Enter Title Of Book"
            name="Title" value="<%= books.Title %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="PriceTextField">Price</span>
            <input type="text" class="form-control" placeholder="Enter Price of Book" 
            name="Price" value="<%= books.Price %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="AuthorTextField">Author</span>
            <input type="text" class="form-control" placeholder="Enter Author Name" 
            name="Author" value="<%= books.Author %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="GenreTextFeild">Genre</span>
            <input type="text" class="form-control" placeholder="Enter Genre Of Book" 
            name="Genre" value="<%= books.Genre %>" required>
        </div>

            <% if(title == "Edit") { %>
                <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
            <% } else { %>
                <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
            <% } %>  
            
            <a href="/books" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
        </div>
    </form>
</div>

